<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_UP_SDK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>


        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:typeface">serif</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/textColorPrimaryLight</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="SubMenuBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
    </style>
    <style name="bottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>