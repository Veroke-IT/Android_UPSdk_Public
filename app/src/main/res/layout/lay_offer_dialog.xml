<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        >


        <View
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="4dp"
            android:background="@drawable/slc_btn_confirm"
            android:backgroundTint="@color/light_gray_tracking_line"/>


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_sheet">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dlg_offer_detail_alrt_ll_name_container"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/dlg_offer_detail_alrt_ll_desc_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/rect_gray_rounded"
                        android:orientation="vertical"
                        android:padding="15dp">


                        <TextView
                            android:id="@+id/dlg_offer_detail_alrt_txv_save_aprrox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/textview_font_padding_top"
                            android:paddingBottom="@dimen/textview_font_padding_top"
                            android:text="Save Approx. QAR 50"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontsize_small"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="@color/gray_offers"
                            android:id="@+id/dlg_offer_detail_alrt_txv_merchant_name_only"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/textview_font_margin_top"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="@dimen/textview_font_margin_bottom"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/textview_font_padding_top"
                            android:paddingBottom="@dimen/textview_font_padding_bottom"
                            android:text="name"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fontsize_mini"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="@color/gray"
                            android:id="@+id/dlg_offer_detail_alrt_txv_free_offer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/textview_font_margin_top"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="@dimen/textview_font_margin_bottom"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/textview_font_padding_top"
                            android:paddingBottom="@dimen/textview_font_padding_bottom"
                            android:text="Free Beverage"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fontsize_mini"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:textColor="@color/text_gray_light_delivery"
                                android:id="@+id/dlg_offer_detail_alrt_txv_free_reason"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/textview_font_margin_top"
                                android:layout_marginBottom="@dimen/textview_font_margin_bottom"
                                android:layout_weight="1"
                                android:autoLink="web"
                                android:paddingTop="@dimen/textview_font_padding_top"
                                android:paddingBottom="@dimen/textview_font_padding_bottom"
                                android:text="buy 1 get 1 free"
                                android:textAlignment="viewStart"
                                android:textSize="@dimen/fontsize_mini" />
                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/dlg_offer_detail_alrt_ll_detail_exclusion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="visible">


                    <TextView
                        android:textColor="@color/gray_offers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/textview_font_margin_top"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="@dimen/textview_font_margin_bottom"
                        android:paddingTop="@dimen/textview_font_padding_top"
                        android:paddingBottom="@dimen/textview_font_padding_bottom"
                        android:text="@string/dlg_offer_detail_heading_1"
                        android:textAlignment="center"
                        android:textSize="@dimen/fontsize_mini"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/gray_offers"
                        android:id="@+id/dlg_offer_detail_alrt_txv_valid_for"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/textview_font_margin_top"
                        android:layout_marginEnd="10dp"
                        android:autoLink="web"
                        android:paddingTop="@dimen/textview_font_padding_top"
                        android:paddingBottom="@dimen/textview_font_padding_bottom"
                        android:text="Dine in only"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fontsize_mini" />

                    <TextView
                        android:id="@+id/dlg_offer_detail_alrt_txv_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/textview_font_margin_top"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="@dimen/textview_font_margin_bottom"
                        android:autoLink="web"
                        android:paddingTop="@dimen/textview_font_padding_top"
                        android:paddingBottom="@dimen/textview_font_padding_bottom"
                        android:text="Offer Expires on 2/12/12"
                        android:textAlignment="viewStart"
                        android:textColor="@color/gray_offers"
                        android:textSize="@dimen/fontsize_mini"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/gray"
                        android:id="@+id/dlg_offer_detail_alrt_txv_termsofuse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="@dimen/textview_font_margin_bottom"
                        android:paddingTop="@dimen/textview_font_padding_top"
                        android:paddingBottom="@dimen/textview_font_padding_bottom"
                        android:text="@string/dlg_offer_detail_terms_of_use"
                        android:textAlignment="center"
                        android:textSize="@dimen/fontsize_mini" />





                </LinearLayout>





                <Button
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/dlg_offer_detail_alrt_btn_use_offer"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_red_rounded_small"
                    android:paddingTop="@dimen/buttonview_font_padding_top"
                    android:paddingBottom="@dimen/buttonview_font_padding_bottom"
                    android:text="@string/btn_use_offer_small"
                    android:textAlignment="center"
                    android:textColor="@color/textColorPrimaryLight"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="visible" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/dlg_offer_detail_alrt_ll_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="visible">

                <TextView
                    android:textColor="@color/gray_offers"
                    android:layout_centerVertical="true"
                    android:id="@+id/dlg_offer_detail_alrt_txv_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/textview_font_padding_top"
                    android:paddingBottom="@dimen/textview_font_padding_top"
                    android:text="Save Approx. QAR 50"
                    android:textSize="@dimen/fontsize_small" />


                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:id="@+id/dlg_offer_detail_alrt_ll_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_white_rect_small">

                    <ImageView
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"
                        android:id="@+id/frg_category_outlets_imv_share"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/icn_share_offer"
                        />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_share"
                        android:textSize="@dimen/fontsize_mini"
                        android:textStyle="bold"
                        android:textColor="@color/thm_accent_cyan"/>


                </LinearLayout>



            </RelativeLayout>




        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>