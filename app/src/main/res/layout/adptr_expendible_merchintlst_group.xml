<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/adptr_expendible_merchintlst_group_rl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_expdbl_grp_collapse"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <!--clickable for catching white clicks-->
                <RelativeLayout
                    android:id="@+id/merchantLogoImageLayout"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:orientation="vertical">


                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/adptr_expendible_merchintlst_group_merchantLogoImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rmv_place_holder"
                        android:scaleType="centerCrop"
                        app:civ_border_color="@color/bg_light_gray"
                        app:civ_border_width="2dp" />
                </RelativeLayout>


                <!--clickable for catching white clicks-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/adptr_expendible_merchintlst_group_rlMerchintDetail"
                    android:layout_toEndOf="@+id/merchantLogoImageLayout"
                    android:minHeight="30dp"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="00dp">

                    <LinearLayout
                        android:id="@+id/adptr_expendible_merchintlst_group_expllMerchntName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:minHeight="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:id="@+id/adptr_expendible_merchintlst_group_merchant_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:lines="2"
                                android:paddingTop="@dimen/textview_font_padding_top"
                                android:paddingBottom="@dimen/textview_font_padding_top"
                                android:text="Macdonald"
                                android:textAlignment="viewStart"
                                android:textSize="@dimen/fontsize_mini" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                >
                                <LinearLayout
                                    android:id="@+id/adptr_expendible_merchintlst_group_ll_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">



                                    <TextView
                                        android:id="@+id/adptr_expendible_merchintlst_group_merchantAddress"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:lines="1"
                                        android:paddingTop="@dimen/textview_font_padding_top"
                                        android:paddingBottom="@dimen/textview_font_padding_top"
                                        android:text="i10/3 islamabad"
                                        android:textAlignment="viewStart"
                                        android:textColor="@color/thm_txt_hint_dark"
                                        android:textSize="@dimen/fontsize_tiny"
                                        android:textStyle="normal" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/adptr_expendible_merchintlst_group_merchantDistance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:paddingTop="@dimen/textview_font_padding_top"
                                    android:paddingBottom="@dimen/textview_font_padding_top"
                                    android:text="5km"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/thm_txt_hint_dark"
                                    android:textSize="@dimen/fontsize_tiny"
                                    android:textStyle="normal"
                                    android:visibility="visible" />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/adptr_expendible_rl_arrow_cntnr"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_medium">


                        <LinearLayout
                            android:id="@+id/adptr_expendible_merchintlst_group_ll_down"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.4"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/textview_font_padding_top"
                                    android:paddingBottom="@dimen/textview_font_padding_top"
                                    android:text="@string/see_offers"
                                    android:textColor="@color/thm_accent_cyan"
                                    android:textSize="@dimen/fontsize_tiny"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="11dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/icn_cyan_arrow_down" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/adptr_expendible_merchintlst_group_ll_up"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.4"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/textview_font_padding_top"
                                    android:paddingBottom="@dimen/textview_font_padding_top"
                                    android:text="@string/hide_offers"
                                    android:textColor="@color/thm_accent_cyan"
                                    android:textSize="@dimen/fontsize_tiny"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="11dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/icn_cyan_arrow_up" />
                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/merchantLogoImageLayout"
                    android:minHeight="30dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:weightSum="8">

                    <LinearLayout
                        android:id="@+id/adptr_expendible_merchintlst_group_expllMerchntName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:minHeight="50dp"
                        android:orientation="vertical" />

                    <RelativeLayout
                        android:id="@+id/adptr_expendible_rl_arrow_cntnr_clickable1"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/adptr_expendible_merchintlst_group_rlMerchintDetail"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp">

                    <ImageView
                        android:id="@+id/adptr_expendible_merchintlst_group_group_arrow"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icn_gray_arrow_expndbl_outlet" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/adptr_expendible_merchintlst_group_exp_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="@color/thm_gift_divider" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/expfoodLockIcn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="25dp"
        android:gravity="center_horizontal"
        android:minWidth="40dp"
        android:minHeight="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/adptr_expendible_merchintlst_group_rl_groupFestivalImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/adptr_expendible_merchintlst_group_groupFestivalImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icn_special_delivery"
                android:scaleType="centerCrop" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>