<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/laytabstrip_itm_imv_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="3dp"
        />

    <TextView
        android:id="@+id/laytabstrip_itm_txv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textview_font_margin_top"
        android:layout_marginBottom="@dimen/textview_font_margin_bottom"
        android:paddingTop="@dimen/textview_font_padding_top"
        android:paddingBottom="@dimen/textview_font_padding_bottom"
        android:text="MyTitle"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/fontsize_normal"
        android:textStyle="bold" />
</LinearLayout>