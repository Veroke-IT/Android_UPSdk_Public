<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:rotationY="@integer/view_pager_rotation"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ExpandableListView
            android:id="@+id/frg_new_brands_lsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:childDivider="@color/white"
            android:divider="@color/transparent"
            android:paddingBottom="12dp"
            android:clipToPadding="false"
            android:dividerHeight="0dp"
            android:groupIndicator="@null"
            android:listSelector="@android:color/transparent"
            android:visibility="visible"
            android:layoutAnimation="@anim/anim_pointer"

            />




        <TextView
            android:id="@+id/frg_new_brands_txv_nt_found"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="@dimen/textview_font_padding_top"
            android:paddingBottom="@dimen/textview_font_padding_top"
            android:text="@string/no_offers_found"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/fontsize_normal"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>