<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/frg_merchant_detail_ll_main_cntnr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ScrollView
            android:id="@+id/frg_merchant_detail_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_top_cntnr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.duolingo.open.rtlviewpager.RtlViewPager
                                    android:id="@+id/frg_merchant_detail_rtl_outlet_images"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="300dp" />

                                <com.viewpagerindicator.CirclePageIndicator
                                    android:id="@+id/frg_merchant_detail_cpi_outlet_images"
                                    android:layout_width="fill_parent"
                                    android:layout_height="20dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/transparent"
                                    android:rotationY="@integer/view_pager_rotation"
                                    app:fillColor="@color/thm_txt_hint_dark"
                                    app:pageColor="@color/thm_txt_hint_light_new"
                                    app:radius="3dp"
                                    app:strokeWidth="0dp" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/frg_merchant_detail_imv_product"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:adjustViewBounds="true"
                                android:background="@color/bg_light_gray"
                                android:minHeight="300dp"
                                android:scaleType="centerCrop"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-40dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginStart="25dp"
                                    android:gravity="start">


                                    <com.mikhaellopez.circularimageview.CircularImageView
                                        android:id="@+id/frg_merchant_detail_imvMerchant_border"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/rmv_border"
                                        android:scaleType="centerCrop"
                                        android:visibility="visible" />

                                    <com.mikhaellopez.circularimageview.CircularImageView
                                        android:id="@+id/frg_merchant_detail_imvMerchant"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/rmv_place_holder"
                                        android:padding="5dp"
                                        android:scaleType="centerCrop"
                                        android:visibility="visible"
                                        app:civ_border_width="0dp" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/frg_merchant_detail_ll_btns"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginEnd="18dp"
                                    android:orientation="vertical"
                                    android:padding="1dp">

                                    <TextView
                                        android:id="@+id/frg_merchant_detail_txv_merchant_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="10dp"
                                        android:paddingTop="@dimen/textview_font_padding_top"
                                        android:paddingBottom="@dimen/textview_font_padding_top"
                                        android:text="@string/dlg_offer_detail_heading_1"
                                        android:textAlignment="viewStart"
                                        android:textSize="@dimen/fontsize_normal" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:gravity="center"
                                android:weightSum="4">

                                <RelativeLayout
                                    android:id="@+id/frg_merchant_detail_btn_menu"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="visible">

                                    <com.dd.ShadowLayout
                                        android:id="@+id/shadow_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginEnd="1dp"
                                        app:sl_cornerRadius="8dp"
                                        app:sl_dx="0dp"
                                        app:sl_dy="0dp"
                                        app:sl_shadowColor="@color/thm_shadow_light"
                                        app:sl_shadowRadius="4dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:background="@drawable/shp_rect_rounded_white2"
                                            android:gravity="center">

                                            <ImageView
                                                android:id="@+id/icn_menu"
                                                android:layout_width="wrap_content"
                                                android:layout_height="16dp"
                                                android:layout_centerVertical="true"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:adjustViewBounds="true"
                                                android:src="@drawable/icn_menu_cyan" />


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:gravity="center"
                                                android:paddingTop="@dimen/textview_font_padding_top"
                                                android:paddingBottom="@dimen/textview_font_padding_top"
                                                android:text="@string/frg_merchant_detail_menu"
                                                android:textSize="@dimen/fontsize_mini"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                    </com.dd.ShadowLayout>
                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/frg_merchant_detail_btn_call"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="visible">

                                    <com.dd.ShadowLayout
                                        android:id="@+id/shadow_layout_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginEnd="1dp"
                                        app:sl_cornerRadius="8dp"
                                        app:sl_dx="0dp"
                                        app:sl_dy="0dp"
                                        app:sl_shadowColor="@color/thm_shadow_light"
                                        app:sl_shadowRadius="4dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:background="@drawable/shp_rect_rounded_white2"
                                            android:gravity="center">

                                            <ImageView
                                                android:id="@+id/icn_phone"
                                                android:layout_width="16dp"
                                                android:layout_height="14dp"
                                                android:layout_centerVertical="true"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:src="@drawable/icn_phone_cyan" />


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:gravity="center"
                                                android:paddingTop="@dimen/textview_font_padding_top"
                                                android:paddingBottom="@dimen/textview_font_padding_top"
                                                android:text="@string/frg_merchant_detail_call"
                                                android:textSize="@dimen/fontsize_mini"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                    </com.dd.ShadowLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/frg_merchant_detail_btn_direction"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="visible">

                                    <com.dd.ShadowLayout
                                        android:id="@+id/shadow_layout_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginEnd="1dp"
                                        app:sl_cornerRadius="8dp"
                                        app:sl_dx="0dp"
                                        app:sl_dy="0dp"
                                        app:sl_shadowColor="@color/thm_shadow_light"
                                        app:sl_shadowRadius="4dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:background="@drawable/shp_rect_rounded_white2"
                                            android:gravity="center">

                                            <ImageView
                                                android:id="@+id/icn_find_it"
                                                android:layout_width="16dp"
                                                android:layout_height="14dp"
                                                android:layout_centerVertical="true"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:src="@drawable/icn_location_cyan" />


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:gravity="center"
                                                android:paddingTop="@dimen/textview_font_padding_top"
                                                android:paddingBottom="@dimen/textview_font_padding_top"
                                                android:text="@string/frg_merchant_detail_find_it"
                                                android:textSize="@dimen/fontsize_mini"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                    </com.dd.ShadowLayout>
                                </RelativeLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height_xlarge">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">


                                <RelativeLayout
                                    android:id="@+id/frg_merchant_detail_rl_back"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:gravity="center_vertical"
                                    android:visibility="visible">

                                    <com.mikhaellopez.circularimageview.CircularImageView
                                        android:layout_width="30dp"
                                        android:layout_height="35dp"
                                        android:layout_centerInParent="true"
                                        android:background="@drawable/rmv_place_holder"
                                        android:backgroundTint="@color/white"
                                        android:scaleType="centerCrop"
                                        android:visibility="visible"
                                        app:civ_border_width="0dp" />

                                    <ImageView
                                        android:id="@+id/frg_category_outlets_imv_back"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_centerInParent="true"
                                        android:background="@drawable/icn_arrow_back_gray" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:visibility="gone"
                                    android:id="@+id/frg_merchant_detail_rl_share"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:orientation="horizontal"
                                    android:elevation="2dp"
                                    android:background="@drawable/btn_white_rect_small">

                                    <ImageView
                                        android:layout_marginEnd="8dp"
                                        android:layout_gravity="center"
                                        android:id="@+id/frg_category_outlets_imv_share"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/icn_share_offer"
                                        />

                                    <TextView
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/btn_share"
                                        android:textSize="@dimen/fontsize_mini"
                                        android:textStyle="bold"
                                        android:textColor="@color/thm_accent_cyan"/>


                                </LinearLayout>



                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/frg_merchant_detail_ll_cntnr_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl_top_cntnr"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="@dimen/textview_font_padding_top"
                        android:paddingBottom="@dimen/textview_font_padding_top"
                        android:text="@string/frg_merchant_detail_fragment_offers"
                        android:textSize="@dimen/fontsize_normal"
                        android:textStyle="bold" />

                    <com.example.android_up_sdk.Utils.ExpandableHeightGridView
                        android:id="@+id/frg_merchant_detial_lsv_offers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:divider="@null"
                        android:listSelector="@color/transparent"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="none" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15dp"
                            android:background="@color/thm_red_delivery" />

                        <TextView
                            android:id="@+id/frg_merchant_detail_txv_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/textview_font_padding_top"
                            android:paddingBottom="@dimen/textview_font_padding_top"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fontsize_small"
                            android:visibility="visible" />


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="@dimen/textview_font_padding_top"
                        android:paddingBottom="@dimen/textview_font_padding_top"
                        android:text="@string/frg_merchant_detail_outlet_details"
                        android:textSize="@dimen/fontsize_normal"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/lst_item_new_offer_rl_outline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:visibility="visible">

                        <com.dd.ShadowLayout
                            android:id="@+id/shadow_layout_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="1dp"
                            app:sl_cornerRadius="15dp"
                            app:sl_dx="0dp"
                            app:sl_dy="0dp"
                            app:sl_shadowColor="@color/thm_shadow_light"
                            app:sl_shadowRadius="6dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shp_rect_rounded_white"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:id="@+id/frg_merchant_detail_imv_hours"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/icn_opening_hour"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toEndOf="@+id/frg_merchant_detail_imv_hours"
                                        android:paddingTop="@dimen/textview_font_padding_top"
                                        android:paddingBottom="@dimen/textview_font_padding_top"
                                        android:text="@string/frg_merchant_detail_fragment_openining_hours"
                                        android:textAlignment="viewStart"
                                        android:textSize="@dimen/fontsize_mini"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="40dp"
                                        android:paddingTop="@dimen/textview_font_padding_top"
                                        android:paddingBottom="@dimen/textview_font_padding_top"
                                        android:text="@string/frg_merchant_detail_fragment_is_open"
                                        android:textColor="@color/thm_red"
                                        android:textSize="@dimen/fontsize_mini"
                                        android:visibility="gone" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:orientation="horizontal"
                                    android:paddingBottom="10dp"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="@dimen/textview_font_padding_top"
                                            android:paddingBottom="@dimen/textview_font_padding_top"
                                            android:text="@string/frg_merchant_detail_fragment_weekdays"
                                            android:textColor="@color/text_gray_light"
                                            android:textSize="@dimen/fontsize_mini" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="@dimen/textview_font_padding_top"
                                            android:paddingBottom="@dimen/textview_font_padding_top"
                                            android:text="@string/frg_merchant_detail_fragment_weekends"
                                            android:textColor="@color/text_gray_light"
                                            android:textSize="@dimen/fontsize_mini" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_weight="3"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/frg_merchant_detail_txv_weekdays_timing"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:lineSpacingExtra="5dp"
                                            android:paddingTop="@dimen/textview_font_padding_top"
                                            android:paddingBottom="@dimen/textview_font_padding_top"
                                            android:text="8:am - 8:00pm"
                                            android:textAlignment="viewStart"
                                            android:textSize="@dimen/fontsize_mini" />

                                        <TextView
                                            android:id="@+id/frg_merchant_detail_txv_weekend_timing"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="@dimen/textview_font_padding_top"
                                            android:paddingBottom="@dimen/textview_font_padding_top"
                                            android:text="8:am - 8:00pm"
                                            android:textSize="@dimen/fontsize_mini"
                                            android:visibility="gone" />


                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal"
                                    android:visibility="visible">


                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/icn_location_gray"
                                        app:tint="@color/gray" />

                                    <TextView
                                        android:id="@+id/frg_merchant_detail_txv_merchant_name"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dp"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:paddingTop="@dimen/textview_font_padding_top"
                                        android:paddingBottom="@dimen/textview_font_padding_top"
                                        android:text="@string/dlg_offer_detail_heading_1"
                                        android:textSize="@dimen/fontsize_mini" />

                                </LinearLayout>

                            </LinearLayout>
                        </com.dd.ShadowLayout>
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/frg_merchant_detail_txv_nt_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/textview_font_padding_top"
        android:paddingBottom="@dimen/textview_font_padding_top"
        android:text="@string/frg_merchant_detail_no_outlets_found"
        android:textColor="@color/gray"
        android:textSize="@dimen/fontsize_small"
        android:visibility="gone" />

</RelativeLayout>