<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_large">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingStart="16dp">

            <RelativeLayout
                android:id="@+id/frg_web_view_rl_back"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/app_bar_imv_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icn_arrow_back_gray" />
            </RelativeLayout>


            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/frg_web_view_txv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="@dimen/textview_font_margin_top"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/textview_font_margin_bottom"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/textview_font_padding_top"
                android:paddingEnd="10dp"
                android:paddingBottom="@dimen/buttonview_font_padding_bottom"
                android:text="@string/frg_settings_terms_of_user"
                android:textAlignment="viewStart"
                android:textColor="@color/thm_red_logo"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>

    </RelativeLayout>


    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </WebView>
</LinearLayout>