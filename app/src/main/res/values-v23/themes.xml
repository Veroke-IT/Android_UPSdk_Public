<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Android_UP_SDK" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>


        <item name="android:textColor">@color/black</item>

        <item name="android:fontFamily" tools:targetApi="23">serif</item>
        <item name="android:typeface">serif</item>


        <item name="android:buttonStyle" tools:targetApi="23">@style/myButtonStyle</item>
        <item name="android:textViewStyle" tools:targetApi="23">@style/myTextViewStyle</item>
        <item name="editTextStyle" tools:targetApi="23">@style/myEditTextStyle</item>
    </style>

    <style name="myButtonStyle" parent="android:Widget.Button" tools:targetApi="23">
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily" tools:targetApi="23">serif</item>
    </style>

    <style name="myTextViewStyle" parent="android:Widget.TextView" tools:targetApi="23">
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily" tools:targetApi="23">serif</item>
    </style>

    <style name="myEditTextStyle" parent="android:Widget.EditText" tools:targetApi="23">
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily" tools:targetApi="23">serif</item>
        <item name="android:textColorHint">@color/thm_text_hint</item>
    </style>


    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/textColorPrimaryLight</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="SubMenuBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
    </style>
    <style name="bottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>